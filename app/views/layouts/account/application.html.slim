= content_for :main do

  - if current_user.force_password_change && controller.controller_path != "account/passwords"
    .row
      .col-md-12
        = render "force_change_password"

  - if current_user.expired?
    .row
      .col-md-12
        = render "account_expired"
  - elsif current_user.expires_soon?
    .row
      .col-md-12
        = render "account_expires_soon"

  .row
    .col-md-12.col-lg-3.order-lg-last.d-print-none
      = render "nav"
    .col-md-12.col-lg-9.order-lg-first
      = yield

= render template: "layouts/application"
